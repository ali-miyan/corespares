<%- include('../partials/product-partial.ejs') -%>


      <section class="content-main">
        <div class="content-header">
          <h2 class="content-title">Product list</h2>
          <div>
            <a href="/admin/add-products" class="btn btn-primary"
              ><i class="material-icons md-plus"></i> Create new</a
            >
          </div>
        </div>
        <div class="card mb-4">
          <header class="card-header">
            <div class="row gx-3">
              <div class="col-lg-4 col-md-6 me-auto">
                <input
                  type="text"
                  placeholder="Search..."
                  class="form-control"
                />
              </div>
              <div class="col-lg-2 col-md-3 col-6">
                <select class="form-select">
                  <option>Status</option>
                  <option>Active</option>
                  <option>Disabled</option>
                  <option>Show all</option>
                </select>
              </div>
              <div class="col-lg-2 col-md-3 col-6">
                <select class="form-select">
                  <option>Show 20</option>
                  <option>Show 30</option>
                  <option>Show 40</option>
                </select>
              </div>
            </div>
          </header>
          <!-- card-header end// -->
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Seller</th>
                    <th>Email</th>
                    <th class="text-end">Status</th>
                    <th class="text-end">Category</th>
                    <th class="text-end">Registered</th>
                    <th class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach(function(product, index) { %>
                  <tr>
                    <td width="40%">
                      <a href="#" class="itemside">
                        <div class="left">
                          <img
                            src="/public/productimages/<%= product.images[0]%>"
                            class="img-sm img-avatar"
                            alt="Userpic"
                          />
                        </div>
                        <div class="info pl-3">
                          <h6 class="mb-0 title"><%= product.name%></h6>
                        </div>
                      </a>
                    </td>
                    <td><%= product.price%></td>
                    <td class="text-end"><%= product.quantity%></td>
                    <td class="text-end"><%= product.categoryId.title%></td>
                    <td class="text-end">
                      <span class="badge rounded-pill alert-success"
                        >Active</span
                      >
                    </td>
                    <td class="text-end">
                      <a
                        href="#"
                        class="btn btn-sm btn-brand rounded font-sm mt-15"
                        >View details</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <!-- table-responsive.// -->
            </div>
          </div>
          <!-- card-body end// -->
        </div>
        <!-- card end// -->
      </section>
    </main>
  </body>
</html>
