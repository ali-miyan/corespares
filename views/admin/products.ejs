<%- include('../partials/product-partial.ejs') -%>


  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title">Product list</h2>
      <div>
        <a href="/admin/add-products" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
      </div>
    </div>
    <div class="card mb-4">
      <header class="card-header">
        <div class="row gx-3">
          <div class="col-lg-4 col-md-6 me-auto">
            <input type="text" placeholder="Search..." class="form-control" />
          </div>
          <div class="col-lg-2 col-md-3 col-6">
            <select class="form-select">
              <option>Status</option>
              <option>Active</option>
              <option>Disabled</option>
              <option>Show all</option>
            </select>
          </div>
          <div class="col-lg-2 col-md-3 col-6">
            <select class="form-select">
              <option>Show 20</option>
              <option>Show 30</option>
              <option>Show 40</option>
            </select>
          </div>
        </div>
      </header>
      <!-- card-header end// -->
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>Status</th> <!-- corrected typo: "status" to "Status" -->
                <th>Action</th> <!-- corrected misplaced closing tag -->
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              <% if (products && products.length > 0) { %>
                <% products.forEach(function(product, index) { %>
                  <tr>
                    <td >
                      <img style="height: 60px; width: 60px" src="/public/productimages/<%= product.images[0] %>" class="img-sm img-avatar" alt="Userpic" />
                    </td>
                    <td>
                      <%= product.name %>
                    </td>  
                    <td>
                      <%= product.price %>
                    </td>
                    <td>
                      <%= product.quantity %>
                    </td>
                    <td>
                      <%= product.categoryId?.title %>
                    </td>
                    <td>
                      <% if (product.is_blocked) { %>
                        <span class="badge rounded-pill alert-success">Active</span>
                      <% } else { %>
                        <span class="badge rounded-pill alert-danger">Not Active</span> <!-- corrected typo: "not-Active" to "Not Active" -->
                      <% } %>
                    </td>
                    <td>
                      <button id="showalert" onclick="confirmDelete('<%= product._id %>')" class="btn rounded font-sm hover-up">
                        <i class="material-icons md-delete"></i>
                      </button>
                    </td>
                    <td>
                      <a href="/admin/edit-product?id=<%= product._id %>" class="btn btn-sm btn-brand rounded font-sm">Edit</a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center">No products found</td> <!-- corrected colspan -->
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
  </main>
  <script>
    function confirmDelete(productId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You are about to delete this product!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      }).then((result) => {
        if (result.isConfirmed) {
          deleteProduct(productId);
        }
      });
    }

    function deleteProduct(productId) {
      fetch("/admin/delete-product", {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ productId: productId }),
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.ok) {
            window.location.reload();
          }
        })
        .catch((error) => {
          console.error("Error deleting product:", error);
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="/public/assets/js/vendors/jquery-3.6.0.min.js"></script>
  <script src="/public/assets/js/vendors/bootstrap.bundle.min.js"></script>
  <script src="/public/assets/js/vendors/select2.min.js"></script>
  <script src="/public/assets/js/vendors/perfect-scrollbar.js"></script>
  <script src="/public/assets/js/vendors/jquery.fullscreen.min.js"></script>
  <script src="/public/assets/js/main.js?v=1.1" type="text/javascript"></script>
  </body>

  </html>