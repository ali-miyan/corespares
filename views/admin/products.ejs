<%- include('../partials/product-partial.ejs') -%>


  <section class="content-main">
    <div class="content-header">
      <h2 class="content-title">Product list</h2>
      <div>
        <a href="/admin/add-products" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
      </div>
    </div>
    <div class="card mb-4">
      <header class="card-header">
        <div class="row gx-3">
          <div class="col-lg-4 col-md-6 me-auto">
            <input type="text" placeholder="Search..." class="form-control" />
          </div>
          <div class="col-lg-2 col-md-3 col-6">
            <select class="form-select">
              <option>Status</option>
              <option>Active</option>
              <option>Disabled</option>
              <option>Show all</option>
            </select>
          </div>
          <div class="col-lg-2 col-md-3 col-6">
            <select class="form-select">
              <option>Show 20</option>
              <option>Show 30</option>
              <option>Show 40</option>
            </select>
          </div>
        </div>
      </header>
      <!-- card-header end// -->
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>status</th>
                <th>Action</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(function(product, index) { %>
                <tr>
                  <td width="40%">
                    <a href="#" class="itemside">
                      <div class="left">
                        <img src="/public/productimages/<%= product.images[0]%>" class="img-sm img-avatar"
                          alt="Userpic" />
                      </div>
                      <div class="info pl-3">
                        <h6 class="mb-0 title">
                          <%= product.name%>
                        </h6>
                      </div>
                    </a>
                  </td>
                  <td>
                    <%= product.price%>
                  </td>
                  <td>
                    <%= product.quantity%>
                  </td>
                  <td>
                    <%= product.categoryId?.title%>
                  </td>
                  <td>
                    <div class="switch">
                      <label>
                        <input type="checkbox" onclick="updateBlockStatus('<%=index%>')" <%=product.is_blocked ? "" : "checked" %>
                        data-product-id="<%= product._id %>"
                          id="blockToggle<%=index%>">
                          <span class="slider round"></span>
                          <span class="on-label">On</span>
                          <span class="off-label">Off</span>
                      </label>
                    </div>
                  </td>
                  <td>
                    <button id="showalert" onclick="confirmDelete('<%= product._id %>')"
                      class="btn rounded font-sm hover-up">
                      <i class="material-icons md-delete"></i>
                    </button>
                  </td>
                  <td>
                    <a href="/admin/edit-product?id=<%=product._id%>"
                      class="btn btn-sm btn-brand rounded font-sm">Edit</a>
                  </td>
                </tr>

              <% if (products && products.length > 0) { %>
                <% products.forEach(function(product, index) { %>
                  <tr>
                    <td >
                      <img style="height: 60px; width: 60px" src="/public/productimages/<%= product.images[0] %>" class="img-sm img-avatar" alt="Userpic" />
                    </td>
                    <td>
                      <%= product.name %>
                    </td>  
                    <td>
                      <%= product.price %>
                    </td>
                    <td>
                      <%= product.quantity %>
                    </td>
                    <td>
                      <%= product.categoryId?.title %>
                    </td>
                    <td>
                      <% if (product.is_blocked) { %>
                        <span class="badge rounded-pill alert-success">Active</span>
                      <% } else { %>
                        <span class="badge rounded-pill alert-danger">Not Active</span> <!-- corrected typo: "not-Active" to "Not Active" -->
                      <% } %>
                    </td>
                    <td>
                      <button id="showalert" onclick="confirmDelete('<%= product._id %>')" class="btn rounded font-sm hover-up">
                        <i class="material-icons md-delete"></i>
                      </button>
                    </td>
                    <td>
                      <a href="/admin/edit-product?id=<%= product._id %>" class="btn btn-sm btn-brand rounded font-sm">Edit</a>
                    </td>
                  </tr>

                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center">No products found</td> <!-- corrected colspan -->
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
  </main>
  <style>
    .switch {
      position: relative;
      display: inline-block;
      width: 60px;
      height: 34px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      -webkit-transition: 0.4s;
      transition: 0.4s;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      -webkit-transition: 0.4s;
      transition: 0.4s;
    }

    input:checked+.slider {
      background-color: #3bb77e;
    }

    input:focus+.slider {
      box-shadow: 0 0 1px #3bb77e;
    }

    input:checked+.slider:before {
      -webkit-transform: translateX(26px);
      -ms-transform: translateX(26px);
      transform: translateX(26px);
    }

    .slider.round {
      border-radius: 34px;
    }

    .slider.round:before {
      border-radius: 50%;
    }

    .on-label,
    .off-label {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      display: none;
      right: 20px;
    }

    input:checked+.slider+.on-label {
      display: inline-block;
    }

    input:not(:checked)+.slider~.off-label {
      display: inline-block;
    }

    .on-label {
      left: 10px;
    }

    .off-label {
      right: 10px;
    }

    #imageContainer {
      width: 100%;
      height: 200px;
      /* Adjust height as needed */
      background-size: cover;
      background-position: center;
    }
  </style>
  <script>
    function confirmDelete(productId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You are about to delete this product!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      }).then((result) => {
        if (result.isConfirmed) {
          deleteProduct(productId);
        }
      });
    }

    function deleteProduct(productId) {
      fetch("/admin/delete-product", {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ productId: productId }),
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.ok) {
            window.location.reload();
          }
        })
        .catch((error) => {
          console.error("Error deleting product:", error);
        });
    }
  </script>
  <script>

    function updateBlockStatus(index) {
      console.log(index);
      var blockToggle = document.getElementById(`blockToggle${index}`);
      var isBlocked = blockToggle.checked;
      var productId = blockToggle.getAttribute("data-product-id");
      console.log(productId, isBlocked);
      fetch("/admin/product-status", {
        method: "PATCH",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          productId: productId,
          isBlocked: isBlocked,
        }),
      })
        .then((response) => {
          if (response.ok) {
            console.log("Block status updated successfully");
          } else {
            console.error("Failed to update block status");
          }
        })
        .catch((error) => {
          console.error("Error updating block status:", error);
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script src="/public/assets/js/vendors/jquery-3.6.0.min.js"></script>
  <script src="/public/assets/js/vendors/bootstrap.bundle.min.js"></script>
  <script src="/public/assets/js/vendors/select2.min.js"></script>
  <script src="/public/assets/js/vendors/perfect-scrollbar.js"></script>
  <script src="/public/assets/js/vendors/jquery.fullscreen.min.js"></script>
  <script src="/public/assets/js/main.js?v=1.1" type="text/javascript"></script>
  </body>

  </html>