                                },
                                "1200": {
                                    "items":4,
                                    "nav": true,
                                    "dots": false
                                }
                            }
                        }'>
      <%relatedProducts.forEach((item)=>{%>
        <div class="product product-7 text-center">
          <figure class="product-media" style="background-color: white;">
            <!-- <span class="product-label label-new">New</span> -->
            <a href="/product-details/<%=item._id%>">
              <img src="/public/sharpimages/<%= item.images[0]%>"
                style="margin: auto; width: auto; height: 200px; object-position: center; object-fit: fill;"
                alt="Product image" class="product-image" />
            </a>

            <!-- End .product-action-vertical -->

            <div class="product-action">
              <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
            </div>
            <!-- End .product-action -->
          </figure>
          <!-- End .product-media -->

          <div class="product-body">
            <div class="product-cat">
              <a href="#">
                <%=item.categoryId.title%>
              </a>
            </div>
            <!-- End .product-cat -->
            <h3 class="product-title">
              <a href="/product-details/<%=item._id%>">
                <%=item.name%>
              </a>
            </h3>
            <!-- End .product-title -->
            <div class="product-price">
              <%=item.price%>
            </div>
            <!-- End .product-price -->
            <!-- End .product-nav -->
          </div>
